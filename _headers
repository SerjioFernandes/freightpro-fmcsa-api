# Netlify HTTP Response Headers
# These headers are sent with every response from Netlify

/*
  # Security Headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Content Security Policy
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' blob: https://cdn.tailwindcss.com https://download.agora.io; style-src 'self' 'unsafe-inline' https://cdn.tailwindcss.com https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; img-src 'self' data: blob: https: http:; connect-src 'self' https://freightpro-fmcsa-api.onrender.com https://*.agora.io wss://*.agora.io; media-src 'self' blob: https:; frame-src 'self'; object-src 'none'; base-uri 'self'; form-action 'self'; worker-src 'self' blob:;
  
  # Permissions Policy (formerly Feature-Policy) - Allow camera and microphone for video calls
  Permissions-Policy: geolocation=(), microphone=(self), camera=(self), payment=()
  
  # Performance & Caching
  Cache-Control: public, max-age=31536000, immutable

# Special rules for HTML files (shorter cache)
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# API endpoints should not be cached
/api/*
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

